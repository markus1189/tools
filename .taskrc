# Per-project Taskwarrior config
data.location=.task

# Disable confirmations for scripted use
confirmation=off
bulk=100

# Custom attributes for agentic tracking
uda.source.type=string
uda.source.label=Source
uda.notes.type=string
uda.notes.label=Notes
uda.blocked_reason.type=string
uda.blocked_reason.label=Blocked By

# Useful reports
report.inbox.columns=id,project,description,tags
report.inbox.labels=ID,Project,Description,Tags
report.inbox.filter=status:pending -BLOCKED
report.inbox.sort=urgency-

# Human handoff tag
color.tag.needs-human=bold red

# Blockers report
report.blockers.columns=id,project,description,blocked_reason,tags
report.blockers.labels=ID,Project,Description,Blocked By,Tags
report.blockers.filter=+blocked status:pending
report.blockers.sort=urgency-
